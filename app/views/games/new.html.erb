<ul class="list-inline d-flex justify-content-center my-5">
  <% @grid.each_with_index do |letter, index| %>
  <li class="letter" style="--animation-order: <%= index + 1 %>;">
    <%= letter %>
  </li>
  <% end %>
</ul>

<form action="score" method="post" data-turbo="false">
  <div id="attempt" class="input-group">
    <input type="text" name="attempt" class="form-control form-control-lg" placeholder="Type your attempt" required>
    <input class="btn btn-lg btn-primary" type="submit" value="Send">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
